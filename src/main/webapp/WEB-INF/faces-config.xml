<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <application>
        <el-resolver>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver
        </el-resolver>

        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>

        <resource-bundle>
            <base-name>com.gather.messages</base-name>
            <var>msg</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>com.gather.icon</base-name>
            <var>icon</var>
        </resource-bundle>
        
         <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>

    <factory>
        <exception-handler-factory>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory
        </exception-handler-factory>
    </factory>

    <validator>
        <validator-id>emailValidator</validator-id>
        <validator-class>com.gather.jsfcommons.validator.EmailValidator</validator-class>
    </validator>
    
    <converter>
        <converter-id>BooleanConverter</converter-id>
        <converter-class>com.gather.bci.ffmm.mesaincidencias.application.calendario.converter.BooleanConverter</converter-class>
    </converter>


    <managed-bean>
        <managed-bean-name>stringSort</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.StringSort</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>rutSort</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.RUTSort</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>nullSort</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.NullSort</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>numberSort</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.NumberSort</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>dateSort</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.DateSort</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>columnSorter</managed-bean-name>
        <managed-bean-class>com.gather.jsfcommons.sort.ColumnSorter</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>sortList</property-name>
            <list-entries>
                <value-class>com.gather.jsfcommons.sort.ISort</value-class>
                <value>#{nullSort}</value>
                <value>#{numberSort}</value>
                <value>#{rutSort}</value>
                <value>#{dateSort}</value>
                <value>#{stringSort}</value>
            </list-entries>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>meses</managed-bean-name>
        <managed-bean-class>com.gather.gathercommons.util.MesesUtil</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
